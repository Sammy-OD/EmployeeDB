<%- include('./partials/usernav') %>

<div id="dashboard-main">
    <div class="container indigo darken-4 white-text" style="overflow-x: auto;">
        <table class="striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Sex</th>
                    <th>Department</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                <% if (typeof list != 'undefined') { %>
                    <% list.forEach((employee)=> { %>
                        <tr>
                            <td><%= employee.fullName %></td>
                            <td><%= employee.sex %></td>
                            <td><%= employee.department %></td>
                            <td><%= employee.email %></td>
                            <td><%= employee.phoneNumber %></td>
                            <td class="right">
                                <a class="waves-effect waves-light btn-small btn-floating edit-btn user-btn" href="/edit/<%= employee._id %>"><i class="fa fa-pen"></i></a>
                                <a class="waves-effect waves-light btn-small btn-floating red darken-2 user-btn" href="/delete/<%= employee._id %>" onclick="return confirm('Are you sure you want to delete this record?')"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    <% }); %>
                <% } %>
            </tbody>
        </table>
    </div>
</div>