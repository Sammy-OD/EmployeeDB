<br>

<div class="container indigo darken-4 white-text" style="overflow-x: auto; margin-bottom: 80px;">
    <table class="striped">
        <thead>
            <tr>
                <th>User</th>
                <th>Email</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <% if (typeof list != 'undefined') { %>
                <% list.forEach((user)=> { %>
                    <tr>
                        <td><%= user.fullName %></td>
                        <td><%= user.email %></td>
                        <td class="right">
                            <a class="waves-effect waves-light btn-small btn-floating red darken-2 user-btn" href="/admin/delete/<%= user._id %>" onclick="return confirm('Are you sure you want to delete this user?')"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                <% }); %>
            <% } %>
        </tbody>
    </table>
</div>