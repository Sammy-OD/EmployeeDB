<%- include('./partials/header') %>

<div class="container" style="margin: 40px auto;">
    <div class="row">
        <div class="col s12 m6 offset-m3">
            <div class="card-panel z-depth-3">
                <h3 class="indigo-text text-darken-4 center" style="margin-bottom: 20px;"><i class="fa fa-sign-in-alt"></i> SIGN IN</h3>
                <%- include('./partials/messages')%>
            <form action="/signIn" method="POST" autocomplete="off">
                <div class="row" style="margin-bottom: 0;">
                    <div class="input-field col s12">
                        <i class="fa fa-envelope prefix"></i>
                        <input id="email" type="email" name="email">
                        <label for="email">Email Address</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <i class="fa fa-lock prefix"></i>
                        <input id="password" type="password" name="password">
                        <label for="password">Password</label>
                    </div>
                </div>

                <div class="row">
                    <div class="col s12">
                        <button style="width: 100%;" class="btn waves-effect waves-light indigo darken-4" type="submit">
                            <i class="fa fa-sign-in-alt"></i>&nbsp; Sign In
                        </button>
                    </div>
                </div>
            </form>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>